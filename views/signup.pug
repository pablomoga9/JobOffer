doctype html
html 
head
    meta(charset='UTF-8')
    meta(http-equiv='X-UA-Compatible' content='IE=edge')
    meta(name='viewport' content='width=device-width, initial-scale=1.0')
    style 
        include ./styles.css
    title Login
    

body
    section#search-container
        #main-form-box(method='dialog' open='')
            form#main-form2(action="/api/signup" method='POST')
                input#emailInput(type='text' name='full_name' placeholder='Introduce nombre...')
                input#emailInput(type='email' name='email' placeholder='Introduce email...')
                input#passInput(type='password' name='pass' placeholder='Introduce contraseña...')
                button#sendSignUp(type='submit') REGISTRO
            hr
            #google-log-box
                p o haz login con Google:
                .space
                button GOOGLE
            #register-box
                p#signup-text Si no estás registrado:
                .space
                button SALIR
            #recov-pass
                a(href='#') ¿Olvidaste tu contraseña?
    script(src="/scripts/signUp.js") 